{
  "version": 2,
  "buildCommand": "if [ -d \"frontend\" ]; then cd frontend && npm install && npm run build; else npm install && npm run build; fi",
  "outputDirectory": "frontend/.next",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/main.py"
    }
  ],
  "functions": {
    "api/main.py": {
      "runtime": "python@3.9",
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
